{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <style>
        a{
            text-decoration: none;
            color: #1b1e24;
        }

        body {
            font-family: "Open Sans", arial;
            text-align: center;
        }
        table {
            width: 100%;
            max-width: 600px;
            height: 320px;
            border-collapse: collapse;
            border: 1px solid #000000;
            margin: 50px auto;
            background: white;
        }
        th {
            background: #aa24c0;
            height: 54px;
            width: 25%;
            font-weight: lighter;
            color: white;
            box-shadow: inset 1px 1px 1px #000000;
            transition: all 0.2s;
        }
        tr {
            border-bottom: 1px solid #000000;
        }
        tr:last-child {
            border-bottom: 0px;
        }
        td {
            border-right: 1px solid #090909;
            padding: 10px;
            transition: all 0.2s;
        }

        td input {
            font-size: 14px;
            background: none;
            outline: none;
            border: 0;
            display: table-cell;
            height: 100%;
            width: 100%;
        }
        h1 {
            text-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            text-align: center;
            text-decoration: underline;
        }
        .no-results {
            margin-top: 20px;
            text-align: center;
            color: red;
        }
        .search-form {
            margin-bottom: 20px;
            text-align: center;
        }

        .search-form input[type="text"] {
            padding: 5px;
            width: 200px;
        }

        .search-form button {
            padding: 5px 10px;
            background-color: #aa24c0;
            color: white;
            border: none;
        }
    </style>
    <h1>Liste des Coachs</h1>

    <div class="search-form">
        <form method="GET" action="{{ path('app_list_users2') }}">
            <input type="text" name="search" placeholder="Rechercher un coach..." value="{{ search }}" />
            <button type="submit">Rechercher</button>
        </form>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th>N°</th>
            <th>Nom</th>
            <th>Prénom</th>
            <th>E-Mail</th>
            <th>Rôle</th>
        </tr>
        </thead>

        <tbody>
        {% if users is empty %}
            <tr>
                <td colspan="5" class="no-results">Aucun résultat trouvé</td>
            </tr>
        {% else %}
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.nom }}</td>
                    <td>{{ user.prenom }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.role }}</td>
                </tr>
            {% endfor %}
        {% endif %}
        </tbody>
    </table>
{% endblock %}
