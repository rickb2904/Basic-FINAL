{% extends 'base.html.twig' %}

{% block title %}SeanceCollective index{% endblock %}
{% block body %}

    <style>
        a{
            text-decoration: none;
            color: #1b1e24;
        }

        body {
            font-family: "Open Sans", arial;
            text-align: center;
        }
        table {
            width: 100%;
            max-width: 600px;
            height: 320px;
            border-collapse: collapse;
            border: 1px solid #000000;
            margin: 50px auto;
            background: white;
        }
        th {
            background: #aa24c0;
            height: 54px;
            width: 25%;
            font-weight: lighter;
            color: white;
            box-shadow: inset 1px 1px 1px #000000;
            transition: all 0.2s;
        }
        tr {
            border-bottom: 1px solid #000000;
        }
        tr:last-child {
            border-bottom: 0px;
        }
        td {
            border-right: 1px solid #090909;
            padding: 10px;
            transition: all 0.2s;
        }

        td input {
            font-size: 14px;
            background: none;
            outline: none;
            border: 0;
            display: table-cell;
            height: 100%;
            width: 100%;
        }
        h1 {
            text-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            text-align: center;
            text-decoration: underline;
        }
        .search-form {
            margin-bottom: 20px;
            text-align: center;
        }

        .search-form input[type="text"] {
            padding: 5px;
            width: 200px;
        }

        .search-form button {
            padding: 5px 10px;
            background-color: #aa24c0;
            color: white;
            border: none;
        }
    </style>

    <div class="container">

        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <h1 class="text-center">Liste Séances Collectives</h1>
                <div class="search-form">
                    <form method="GET" action="{{ path('app_seance_collective_index') }}">
                        <input type="text" name="search" placeholder="Rechercher une séance..." value="{{ search }}" />
                        <button type="submit">Rechercher</button>
                    </form>
                </div>
                <table class="table">
                    <thead>
                    <tr>
                        <th>Nom de la séance</th>
                        <th>Nombre de places</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for seance_collective in seance_collectives %}
                        <tr>
                            <td>{{ seance_collective.nomSeanceCollective }}</td>
                            <td>{{ seance_collective.nbPlace }}</td>
                            <td>
                                <form method="post" action="{{ path('app_seance_collective_edit', {'id': seance_collective.id}) }}" onsubmit="return confirm('Êtes-vous sûr(e) de vouloir modifier cet élément ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('modifier' ~ seance_collective.id) }}">
                                    <button class="btn">Modifier</button>
                                </form>
                                <br>
                                <form method="post" action="{{ path('app_seance_collective_delete', {'id': seance_collective.id}) }}" onsubmit="return confirm('Êtes-vous sûr(e) de vouloir supprimer cet élément ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ seance_collective.id) }}">
                                    <button class="btn">Supprimer</button>
                                </form>

                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">Aucune séance enregistrée</td>
                        </tr>
                    {% endfor %}
                    <tr>
                        <th colspan="5">
                            <a href="{{ path('app_seance_collective_new') }}">
                                <button id="btnAdd" type="button" class="btn btn-primary" data-toggle="tooltip" data-original-title="Add more controls">&nbsp; Nouvelle Séance Collective&nbsp;</button>
                            </a>
                        </th>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
